# vim: filetype=neomuttrc
source /usr/local/share/mutt-wizard/mutt-wizard.muttrc # mw-autogenerated
source ./colors

set editor = 'nvim'
set mailcap_path = ~/.config/mutt/mailcap
set date_format="%m/%d/%Y %H:%M"
set index_format="%2C %zs %?X?A& ? %D %-18.18F %s (%-4.4c)"
set sidebar_format = '%B%* %?N?[%N]? %?S?%S?'

set query_command = "khard email --parsable %s"
macro index,pager a "<pipe-message>khard add-email<return>" "add the sender email address to khard"


bind index q noop
bind index,pager i noop
bind index \Cf noop
bind index S sort-mailbox
bind index s sort-reverse

bind index,pager K sidebar-prev
bind index,pager J sidebar-next
bind index,pager L sidebar-open

macro index O "<shell-escape>mailsync<enter>" "run mbsync to collect all mail"

bind index,pager \Ch sidebar-toggle-visible

source /home/jason/.config/mutt/accounts/jason.blocklove@gmail.com.muttrc
macro index,pager i1 '<sync-mailbox><enter-command>source /home/jason/.config/mutt/accounts/jason.blocklove@gmail.com.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to jason.blocklove@gmail.com"
macro index,pager i2 '<sync-mailbox><enter-command>source /home/jason/.config/mutt/accounts/jmb9986@nyu.edu.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to jmb9986@nyu.edu"
macro index,pager i3 '<sync-mailbox><enter-command>source /home/jason/.config/mutt/accounts/jmb1997@comcast.net.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to jmb1997@comcast.net"
macro index,pager i4 '<sync-mailbox><enter-command>source /home/jason/.config/mutt/accounts/jason@blocklove.net.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to jason@blocklove.net"
