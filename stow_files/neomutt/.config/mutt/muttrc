# vim: filetype=neomuttrc
source /usr/local/share/mutt-wizard/mutt-wizard.muttrc # mw-autogenerated

set editor = 'nvim'
set mailcap_path = ~/.config/mutt/mailcap
set date_format="%m/%d/%Y %H:%M"
set index_format="%2C %zs %?X?A& ? %D %-18.18F %s (%-4.4c)"
set sidebar_format = '%B%* %?N?[%N]? %?S?%S?'

bind index q noop
bind index,pager i noop
bind index \Cf noop
bind index S sort-mailbox
bind index s sort-reverse

macro index O "<shell-escape>mailsync<enter>" "run mbsync to collect all mail"
source /home/jason/.config/mutt/accounts/jason@blocklove.net.muttrc
macro index,pager i1 '<sync-mailbox><enter-command>source /home/jason/.config/mutt/accounts/jason@blocklove.net.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to jason@blocklove.net"
macro index,pager i2 '<sync-mailbox><enter-command>source /home/jason/.config/mutt/accounts/jason.blocklove@gmail.com.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to jason.blocklove@gmail.com"
macro index,pager i3 '<sync-mailbox><enter-command>source /home/jason/.config/mutt/accounts/***REMOVED***.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to ***REMOVED***"
macro index,pager i4 '<sync-mailbox><enter-command>source /home/jason/.config/mutt/accounts/jmb8314@g.rit.edu.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to jmb8314@g.rit.edu"
macro index,pager i5 '<sync-mailbox><enter-command>source /home/jason/.config/mutt/accounts/jmb1997@comcast.net.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to jmb1997@comcast.net"
