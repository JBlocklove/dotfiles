#!/bin/sh

connecteddevices=$(nmcli device | awk '$3=="connected" {print $4}')

if [[ ! -n $connecteddevices ]]; then
	netstatus="^c#ff757f^ ^d^Not Connected"
else
	device=$(echo $connecteddevices | head -1)

	if [[ $device == "wired" ]]; then
	    netstatus="^c#ffffff^ ^d^Ethernet"
	else
	    netstatus="^c#ffffff^ ^d^${device}"
	fi
fi

echo -ne "$netstatus"
